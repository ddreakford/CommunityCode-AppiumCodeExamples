<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Launch Application Performance Testing Suite">

    <test name="Launch_Application_iOS_3G">
        <parameter name="nvProfile" value="3G-average" />
        <parameter name="captureLevel" value="Application" /> <!--Accepted Values: 'Device' or 'Application' -->

        <classes>
            <class name="advancedCommands.performanceTransaction.e2e.tests.LaunchApplicationIOSTest"/>
        </classes>
    </test>

    <test name="Launch_Application_iOS_4G">
        <parameter name="nvProfile" value="4G-average" />
